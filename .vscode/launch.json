{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "python": "/home/wizard/miniconda3/envs/deepface/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug DeepFace API",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/deepface/api/src/api.py",
            "args": ["--port", "5032"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "PYTHONPATH": "${workspaceFolder}",
                "LD_LIBRARY_PATH": "/usr/local/cuda/lib64:/usr/local/cuda/extras/CUPTI/lib64:$LD_LIBRARY_PATH",
                "CUDA_HOME": "/usr/local/cuda",
                "XLA_FLAGS": "--xla_gpu_cuda_data_dir=/usr/local/cuda"
            },
            "python": "/home/wizard/miniconda3/envs/deepface/bin/python",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "Activate Conda Environment"
        }
    ]
}